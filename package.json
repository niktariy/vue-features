{
  "name": "niktariy",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "niktariy",
    "email": "verpnikanovikova@niktariy.com"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "core-js": "2",
    "lodash": "^4.17.11",
    "vue": "^2.5.22",
    "vue-i18n": "^8.8.1",
    "vue-image-compressor": "^1.0.3",
    "vue-router": "^3.0.2",
    "vuex": "^3.1.0",
    "vuex-map-fields": "^1.3.3"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.7.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "autoprefixer": "^9.4.7",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.2",
    "file-loader": "^3.0.1",
    "node": "^11.10.0",
    "node-sass": "^4.11.0",
    "postcss": "^7.0.14",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "style-resources-loader": "^1.2.1",
    "vue-eslint-parser": "^6.0.4",
    "vue-fixed-header": "^2.0.2",
    "vue-loader": "^15.6.2",
    "vue-template-compiler": "^2.5.21",
    "webpack": "^4.29.3"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/strongly-recommended",
      "@vue/airbnb"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "parser": "babel-eslint"
    },
    "plugins": [
      "vue"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "max-len": 0,
      "import/extensions": [
        "error",
        "never",
        {
          "svg": "always"
        }
      ],
      "vue/component-name-in-template-casing": [
        "error",
        "kebab-case",
        {
          "registeredComponentsOnly": true,
          "ignores": []
        }
      ],
      "vue/attribute-hyphenation": [
        "error",
        "always"
      ],
      "vue/match-component-file-name": [
        "error",
        {
          "extensions": [
            "vue"
          ],
          "shouldMatchCase": true
        }
      ],
      "vue/require-default-prop": [
        "error"
      ],
      "vue/attributes-order": [
        "error",
        {
          "order": [
            "DEFINITION",
            "LIST_RENDERING",
            "CONDITIONALS",
            "RENDER_MODIFIERS",
            "GLOBAL",
            "UNIQUE",
            "TWO_WAY_BINDING",
            "OTHER_DIRECTIVES",
            "OTHER_ATTR",
            "EVENTS",
            "CONTENT"
          ]
        }
      ]
    },
    "root": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}